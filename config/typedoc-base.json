// https://typedoc.org/options/
{
  "$schema": "https://typedoc.org/schema.json",
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-plugin-mdn-links",
    "typedoc-plugin-external-package-links"
  ],
  "githubPages": false,
  "disableSources": true,
  "externalSymbolLinkMappings": {
    "lit": {
      "LitElement": "https://lit.dev/docs/api/LitElement/#LitElement"
    },
    "@floating-ui/dom": {
      "VirtualElement": "https://floating-ui.com/docs/virtual-elements",
      "ComputePositionConfig": "https://floating-ui.com/docs/computeposition#options",
      "AutoUpdateOptions": "https://floating-ui.com/docs/autoUpdate#options"
    }
  },
  "readme": "none",
  "excludeExternals": true,
  "excludeInternal": true,
  "validation": {
    // TODO: set them as true
    "notExported": false,
    "invalidLink": false,
    "notDocumented": false
  },
  "requiredToBeDocumented": [
    "Enum",
    "EnumMember",
    "Variable",
    // "Function",
    "Class",
    // "Interface",
    // "Property",
    // "Method",
    // "Accessor",
    "TypeAlias"
  ],
  "visibilityFilters": {
    "protected": false,
    "private": false,
    "inherited": false,
    "external": false,
    "@alpha": false,
    "@beta": false
  },
  "treatWarningsAsErrors": true,
  "cleanOutputDir": true,

  // https://github.com/tgreyuk/typedoc-plugin-markdown/tree/next/packages/typedoc-plugin-markdown#readme
  "skipIndexPage": true,
  "hideBreadcrumbs": true,
  "hideInPageTOC": true,
  "hidePageHeader": true,
  "titleTemplate": "{name}",
  "entryFileName": "index.md",
  "identifiersAsCodeBlocks": true,
  "excludeGroups": true,
  "typeDeclarationFormat": "table",
  "enumMembersFormat": "table",
  "propertiesFormat": "table",
  "outputFileStrategy": "modules"
}
